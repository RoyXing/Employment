<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.employment">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".app.App"
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Base.Theme.DesignDemo">

        <activity android:name=".activity.WelcomeActivity">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity
            android:name=".activity.LoginActivity"
            android:launchMode="singleTask" />

        <activity
            android:name=".activity.MainActivity"
            android:launchMode="singleTask" />

        <activity
            android:name=".model.student.activity.EmploymentDetailActivity"
            android:launchMode="singleTask"
            android:theme="@style/Theme.DesignDemo" />
        <activity
            android:name=".model.student.activity.NoteActivity"
            android:launchMode="singleTask" />

        <activity android:name=".model.student.activity.PersonalActivity" />

    </application>

</manifest>